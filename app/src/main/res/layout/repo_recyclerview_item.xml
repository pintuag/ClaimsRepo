<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical"
    app:cardCornerRadius="8dp"
    app:contentPadding="8dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/claimTypeText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/claim_type"
            android:textColor="@color/black"
            android:padding="8dp"
            app:layout_constraintEnd_toStartOf="@id/claimType"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/claimType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/claim_type"
            android:textColor="@color/black"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/expensesAmountText"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/claimDateText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/claim_date"
            android:textColor="@color/black"
            android:padding="8dp"
            app:layout_constraintEnd_toStartOf="@id/claimDate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/claimTypeText" />

        <TextView
            android:id="@+id/claimDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/claim_type"
            android:textColor="@color/black"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/expensesAmountText"
            app:layout_constraintTop_toBottomOf="@id/claimType" />

        <TextView
            android:id="@+id/expensesAmountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/expenses_amount"
            android:textColor="@color/black"
            android:padding="8dp"
            app:layout_constraintEnd_toStartOf="@id/expensesAmount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/claimDateText" />

        <TextView
            android:id="@+id/expensesAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/claim_type"
            android:textColor="@color/black"
            android:padding="8dp"
            app:layout_constraintEnd_toStartOf="@id/viewMoreText"
            app:layout_constraintStart_toEndOf="@id/expensesAmountText"
            app:layout_constraintTop_toBottomOf="@id/claimDate" />

        <TextView
            android:id="@+id/viewMoreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_more"
            android:textColor="@color/colorPrimary"
            android:padding="8dp"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/expensesAmount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>